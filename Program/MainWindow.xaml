<Window x:Class="Program.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Program"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Rectangle Fill="BlueViolet"/>
        
        <StackPanel VerticalAlignment="Center">
            <Button Click="TaskFirst" Margin="20px">Task First</Button>
            <Button Click="TaskSecond" Margin="20px">Task Second</Button>
            <Button Click="TaskThird" Margin="20px">Task Third</Button>
            <Button Click="TaskFourth" Margin="20px">Task Fourth</Button>
        </StackPanel>
    </Grid>
</Window>
